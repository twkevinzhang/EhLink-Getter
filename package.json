{
  "name": "ehlink-getter",
  "version": "0.2.0",
  "description": "EhLink-Getter Desktop App",
  "main": "./out/main/index.js",
  "author": "EhLink-Getter team",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "typecheck:node": "tsc --p tsconfig.node.json --noEmit",
    "typecheck:web": "vue-tsc --p tsconfig.web.json --noEmit",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build:electron": "pnpm run typecheck && electron-vite build",
    "build:python": "python -m PyInstaller sidecar/main.py --noconfirm --onedir --console --name sidecar",
    "build": "pnpm run build:electron && pnpm run build:python",
    "publish:mac": "electron-builder --mac",
    "publish:win": "electron-builder --win",
    "release:patch": "pnpm version patch -m 'chore: release v%s' && git push --follow-tags",
    "release:minor": "pnpm version minor -m 'chore: release v%s' && git push --follow-tags",
    "release:major": "pnpm version major -m 'chore: release v%s' && git push --follow-tags"
  },
  "build": {
    "appId": "dev.twkevinzhang.ehlinkgetter",
    "productName": "EhLink-Getter",
    "directories": {
      "output": "dist/electron"
    },
    "files": [
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/sidecar",
        "to": "sidecar",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "twkevinzhang",
        "repo": "EhLink-Getter"
      }
    ]
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@element-plus/icons-vue": "^2.3.2",
    "axios": "^1.6.2",
    "element-plus": "^2.4.4",
    "form-data": "^4.0.5",
    "pinia": "^2.1.7",
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rushstack/eslint-patch": "^1.6.0",
    "@types/node": "^20.10.4",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.23",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-vue": "^9.19.2",
    "less": "^4.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "tailwindcss": "3.4.17",
    "typescript": "^5.9.3",
    "vite": "^5.0.7",
    "vue-tsc": "^3.2.1"
  },
  "packageManager": "pnpm@10.8.1+sha512.c50088ba998c67b8ca8c99df8a5e02fd2ae2e2b29aaf238feaa9e124248d3f48f9fb6db2424949ff901cffbb5e0f0cc1ad6aedb602cd29450751d11c35023677"
}
